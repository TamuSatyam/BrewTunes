---
interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const {
    title = 'BrewTunes - Your Personal Music & Coffee Journal',
    description = 'Your personal journal for coffee and music pairings. Log what you\'re brewing and what you\'re listening to.',
    image = '/favicon.png',
} = Astro.props;

const siteUrl = 'https://testicle.me'; // Update with your actual domain
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const ogImageURL = new URL(image, siteUrl);
---

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#6F4E37" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:alt" content="BrewTunes logo with coffee cup and music note" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/site.webmanifest"/>
</head>

<body>
  <slot />
</body>

</html>

<style is:global>
    @import '../styles/global.css';
</style>
